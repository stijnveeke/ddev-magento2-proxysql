datadir="/var/lib/proxysql"

admin_variables=
{
	admin_credentials="admin:admin;radmin:radmin"
	mysql_ifaces="0.0.0.0:6032"
}

mysql_variables=
{
	threads=4
	max_connections=2048
	default_query_delay=0
	default_query_timeout=36000000
	have_compress=true
	poll_timeout=2000
	interfaces="0.0.0.0:6033"
	default_schema="information_schema"
	stacksize=1048576
	server_version="5.5.30"
	connect_timeout_server=3000
	monitor_username="monitor"
	monitor_password="monitor"
	monitor_history=600000
	monitor_connect_interval=60000
	monitor_ping_interval=10000
	monitor_read_only_interval=1500
	monitor_read_only_timeout=500
	ping_interval_server_msec=120000
	ping_timeout_server=500
	commands_stats=true
	sessions_sort=true
	connect_retries_on_failure=10
	default_authentication_plugin="mysql_native_password"
}

mysql_servers =
(
    {
        address="mysql-master"
        port=3306
        hostgroup=1
        max_connections=200
    },
    {
        address="mysql-slave-1"
        port=3306
        hostgroup=2
        max_connections=200
    },
    {
        address="mysql-slave-2"
        port=3306
        hostgroup=2
        max_connections=200
    },
    {
        address="mysql-canary"
        port=3306
        hostgroup=3
        max_connections=200
    }
)

mysql_users =
(
    {
        username="reader"
        password="reader"
        active=1
        default_hostgroup=2
        default_schema="mydatabase"
    },
    {
        username="canary"
        password="canary"
        active=1
        default_hostgroup=3
        default_schema="mydatabase"
    }
)

mysql_query_rules =
(
    {
        rule_id=1
        active=1
        match_pattern="^SELECT .* FOR UPDATE$"
        destination_hostgroup=3
        apply=1
        username="canary"
    },
    {
        rule_id=2
        active=1
        match_pattern="^SELECT .* FOR UPDATE$"
        destination_hostgroup=1
        apply=1
    },
    {
        rule_id=3
        active=1
        match_pattern="^SELECT"
        destination_hostgroup=3
        apply=1
        username="canary"
    },
    {
        rule_id=4
        active=1
        match_pattern="^SELECT"
        destination_hostgroup=2
        apply=1
    },
    {
        rule_id=5
        active=1
        match_pattern="^INSERT INTO setup_modules"
        destination_hostgroup=3
        apply=1
        username="canary"
    },
    {
        rule_id=6
        active=1
        match_pattern="^INSERT INTO"
        destination_hostgroup=1
        apply=1
    },
    {
        rule_id=7
        active=1
        match_pattern="^UPDATE setup_modules"
        destination_hostgroup=3
        apply=1
        username="canary"
    },
    {
        rule_id=8
        active=1
        match_pattern="^UPDATE"
        destination_hostgroup=1
        apply=1
    },
    {
        rule_id=9
        active=1
        match_pattern="^DELETE FROM setup_modules"
        destination_hostgroup=3
        apply=1
        username="canary"
    },
    {
        rule_id=10
        active=1
        match_pattern="^DELETE"
        destination_hostgroup=1
        apply=1
    }
)
